<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.application.gameshelfapp.buyvideogames.graphiccontrollers.CredentialsPageController">
   <children>
      <Region prefHeight="20.0" prefWidth="700.0" style="-fx-background-color: #2e60e1;" />
      <Region layoutY="20.0" prefHeight="480.0" prefWidth="700.0" style="-fx-background-color: #433f3f;" />
      <VBox alignment="CENTER" layoutX="107.0" layoutY="19.0" prefHeight="480.0" prefWidth="500.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
         <children>
            <Label text="Insert credentials to pay" textFill="#2e60e1">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="typeOfCard" promptText="type of card" style="-fx-prompt-text-fill: #2e60e1;">
               <VBox.margin>
                  <Insets top="75.0" />
               </VBox.margin>
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="paymentKey" promptText="payment key" style="-fx-prompt-text-fill: #2e60e1;">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </TextField>
            <HBox prefHeight="27.0" prefWidth="400.0">
               <children>
                  <TextField fx:id="address" prefHeight="25.0" prefWidth="237.0" promptText="address" style="-fx-prompt-text-fill: #2e60e1;">
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="regionField" prefWidth="100.0" promptText="region" style="-fx-prompt-text-fill: #2e60e1;">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="countryField" prefWidth="100.0" promptText="country" style="-fx-prompt-text-fill: #2e60e1;">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Italic" size="12.0" />
                     </font>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <Button mnemonicParsing="false" onMouseClicked="#insertCredentials" prefHeight="45.0" prefWidth="120.0" style="-fx-background-color: #2e60e1; -fx-background-radius: 60;" text="Insert" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
